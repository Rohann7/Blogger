<% if flash[:notice] %>
  <div class="alert alert-primary mt-4" role="alert">
    <%= flash[:notice] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="alert alert-info mt-4" role="alert">
    <%= flash[:alert] %>
  </div>
<% end %>