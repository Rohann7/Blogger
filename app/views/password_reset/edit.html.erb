<h2>Reset Password</h2>

<%= form_with model: @user, url: password_reset_edit_path(token: params[:token]) do |form| %>
  <% if form.object.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <% form.object.errors.full_messages.each do |message| %>
        <div> <%= message %></div>
      <% end %>
    </div>
  <% end %>
  <div class="mb-3">
    <%= form.label 'Enter your new password' %>  
    <%= form.password_field :password, class: 'form-control', placeholder: 'Enter your password'  %>
  </div>
  <div class="mb-3">
    <%= form.label 'New password confirmation' %>  
    <%= form.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm your password' %>
  </div>

  <div class="mb-3">
    <%= form.submit 'Reset Password', class: 'btn btn-primary' %>
  </div>
<% end %>